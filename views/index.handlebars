<div id ="headerSection">
  <h2>Eat The Burger</h2>
</div>


 <div class="left">
    <div class="uneaten center">
      {{#each burger}}
        {{#unless devoured}}
          {{> burgers/burger devoured=1}}
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="center">
    <div class="center">
      <input id="burgerName" type="text" placeholder="Name of Your Burger" data-eaten="0">
      <button id="addBurger" type="button">Add Your Burger</button>
    </div>
  </div>

   <div class="right">
    <div class="eaten center">
      {{#each burger}}
        {{#if devoured}}
          {{> burgers/burger devoured=0}}
        {{/if}}
      {{/each}}
    </div>
  </div>
